{
  "name": "my-app",
  "scripts": {
    "start": "bun run start:${NODE_ENV:-development}",
    "start:development": "bun --hot run ./src/index.ts",
    "start:production": "next start",
    "worker": "bun --hot run ./src/worker.ts",
    "prebuild": "prisma generate",
    "build": "bun build --compile --minify --sourcemap ./src/index.ts --outfile myapp",
    "refresh-database": "docker compose exec api bunx prisma migrate reset",
    "prisma-push": "bunx prisma migrate deploy"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.0",
    "@prisma/adapter-pg": "^6.11.1",
    "@prisma/client": "^6.11.1",
    "hono": "^4.8.4",
    "zod": "^3.25.74"
  },
  "devDependencies": {
    "@types/bun": "^1.2.21",
    "prisma": "^6.11.1"
  },
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "peerDependencies": {
    "typescript": "^5"
  }
}
